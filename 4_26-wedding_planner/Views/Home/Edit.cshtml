@{
    ViewData["Title"] = "Edit Wedding Page";
}
@model Wedding

<div class="container">
    <h1 class="display-4 text_center">Edit Your Wedding</h1>
    <form asp-controller="Home" asp-action="UpdateWedding" asp-route-weddingId="@Model.WeddingId" class="shadow p-3 mb-5 rounded" method="POST">
        <div class="form-group">
            <label asp-for="WedderOne"></label>
            <span asp-validation-for="WedderOne" class="text-danger font-weight-bold"></span>
            <input asp-for="WedderOne" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="WedderTwo"></label>
            <span asp-validation-for="WedderTwo" class="text-danger font-weight-bold"></span>
            <input asp-for="WedderTwo" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <span asp-validation-for="Date" class="text-danger font-weight-bold"></span>
            <input asp-for="Date" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
            <input asp-for="Address" class="form-control">
        </div>
        <button class="btn btn-outline-success">Edit</button>
    </form>
</div>